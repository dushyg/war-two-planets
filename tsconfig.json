{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "build", "**/*.spec.ts"],
  "include": ["src"]
}
